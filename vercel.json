{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm run ci",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--no-deprecation"
    }
  },
  "crons": [
    {
      "path": "/api/abandoned-carts/mark?ttlMinutes=60",
      "schedule": "0 0 * * *"
    }
  ]
}
